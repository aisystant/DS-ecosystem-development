+name: Frontmatter Check
+on:
+  pull_request:
+    paths: ["**/*.md"]
+jobs:
+  check:
+    runs-on: ubuntu-latest
+    steps:
+      - uses: actions/checkout@v4
+      - name: Ensure YAML frontmatter exists in changed files
+        shell: bash
+        run: |
+          fail=0
+          files=$(git diff --name-only --diff-filter=ACMR origin/${{ github.base_ref }}... | grep -E '\.md$' || true)
+          for f in $files; do
+            # пропускаем README и .github
+            case "$f" in
+              README.md|.github/*) continue ;;
+            esac
+            first=$(head -n1 "$f" || echo "")
+            if [ "$first" != "---" ]; then
+              echo "::error file=$f,line=1::Нет YAML-фронтматтера. Добавьте шаблон."
+              fail=1
+            fi
+          done
+          exit $fail
+

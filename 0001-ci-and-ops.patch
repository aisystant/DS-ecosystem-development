+name: Naming Check
+on:
+  pull_request:
+    paths: ["**/*.md"]
+jobs:
+  check-names:
+    runs-on: ubuntu-latest
+    steps:
+      - uses: actions/checkout@v4
+      - name: Validate recommended naming (soft warnings)
+        shell: bash
+        run: |
+          files=$(git diff --name-only --diff-filter=ACMR origin/${{ github.base_ref }}... | grep -E '\.md$' || true)
+          for f in $files; do
+            base=$(basename "$f")
+            if echo "$f" | grep -qE '^(\.github/|README\.md)'; then
+              continue
+            fi
+            if ! echo "$base" | grep -Eq '^[0-4]\.[0-9]+\. .+\.md$|^[0-4]\.[0-9]+_.+\.md$|^[0-4]\.0\. Информация\.md$'; then
+              echo "::warning file=$f::Проверьте формат имени (рекомендуется: X.Y. Название.md)"
+            fi
+          done
+          exit 0
+

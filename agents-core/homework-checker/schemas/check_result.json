{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://aisystant.system-school.ru/schemas/homework-checker/check_result.json",
  "title": "CheckResult v0.1",
  "description": "Результат проверки ДЗ от ДЗ-чекера к LMS (v0.1 — синхронный ответ)",
  "type": "object",
  "required": ["comment", "checked_at"],
  "properties": {
    "comment": {
      "type": "string",
      "description": "Форматированный текст комментария для отображения студенту (Markdown)"
    },
    "checked_at": {
      "type": "string",
      "format": "date-time",
      "description": "Время проверки (ISO 8601)"
    }
  },
  "additionalProperties": false
}
